<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TanderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tender_pink</item>
        <item name="colorPrimaryVariant">@color/tender_teal</item>
        <item name="colorOnPrimary">@color/tender_white</item>
        <item name="colorAccent">@color/tender_pink</item>
