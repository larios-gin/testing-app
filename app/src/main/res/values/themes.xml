        <item name="colorSecondary">@color/tender_gold</item>
        <item name="colorSecondaryVariant">@color/tender_yellow</item>
        <item name="colorOnSecondary">@color/tender_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/just_black</item>
        <!-- Customize your theme here. -->
        <item name="welcomeColor">@drawable/gradient_tender</item>
        <item name="textColor">@color/just_black</item>
